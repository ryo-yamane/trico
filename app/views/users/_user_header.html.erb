<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to 'trico', 'users_path',class:"furima-icon" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='サロン名・メニュー名など'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='user-nav'>
    <ul class='lists-left'>
      <li><%= link_to '美容室', hair_index_salons_path, class: "category-list" %></li>
      <li><%= link_to 'ネイル', nail_index_salons_path, class: "brand-list" %></li>
      <li><%= link_to 'マツエク', eyelash_index_salons_path, class: "brand-list" %></li>
      <li><%= link_to 'エステ', estetic_index_salons_path, class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in?%>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録',  registrations_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>