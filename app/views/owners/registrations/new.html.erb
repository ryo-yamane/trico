<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
<%= render "shared/second.header" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "owners/shared/error_messages", resource: resource %>

<div class="field">
    <%= f.label :salon_name %><br />
    <%= f.text_area :salon_name, class:"aaa", id:"salon_name", placeholder:"例) 太郎", maxlength:"20"  %>
 </div> 

 <div class="input-name-wrap">
 <%= f.label :name %><br />
    <%= f.text_area :owner_last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
    <%= f.text_area :owner_first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
 </div> 
 <div class='input-name-wrap'>   
 <%= f.label :kana %><br /> 
      <%= f.text_area :owner_last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%= f.text_area :owner_first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
 </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"aaa", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"aaa",autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"aaa",autocomplete: "new-password" %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, class:"aaa", id:"address", placeholder:"例) 太郎", maxlength:"20"  %>
  </div> 
  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.text_area :phone_number, class:"aaa", id:"phone_number", placeholder:"例) 太郎", maxlength:"20"  %>
  </div> 
 
  <div class="field">
    <%= f.label :nearest_station %><br />
    <%= f.text_area :nearest_station, class:"aaa", id:"nearest-station", placeholder:"例) 太郎", maxlength:"20"  %>
  </div> 
  <div class="field">
  <%= f.label :how_to_pay %><br />
  <%= f.collection_select(:how_to_pay_id, HowToPay.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class="field">
  <%= f.label :rest_day %><br />
  <%= f.collection_select(:rest_day_id, RestDay.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class="field">
  <%= f.label :salon_concept %><br />
  <%= f.collection_select(:salon_concept_id, SalonConcept.all, :id, :name, {}, {class:"select-box", id:"item-shipping-fee-status"}) %>
  </div>
  <div class="field">
    <%= f.label :sns_account %><br />
    <%= f.text_area :sns_account, class:"aaa", id:"phone_number", placeholder:"例) 太郎", maxlength:"20"  %>
  </div> 

<br />
  <div class="register-btn">
    <%= f.submit "Sign up",class:"register-red-btn"  %>
  </div>
<% end %>

<%#<%= render "owners/shared/links" %>

<%= render "shared/footer" %>
</div>